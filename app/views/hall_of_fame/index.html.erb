<div class="hall-of-fame-container">
  <div class="hall-of-fame-column">
    <h2>Top Honkers</h2>
    <div class="jest-list">
      <% @top_honked_jests.each do |jest| %>
        <%= render "jests/jest", jest: jest %>
      <% end %>
    </div>
  </div>

  <div class="hall-of-fame-column">
    <h2>Top Bonkers</h2>
    <div class="jest-list">
      <% @top_bonked_jests.each do |jest| %>
        <%= render "jests/jest", jest: jest %>
      <% end %>
    </div>
  </div>

  <div class="hall-of-fame-column">
    <h2>Yappers</h2>
    <div class="jest-list">
      <% @top_commented_jests.each do |jest| %>
        <%= render "jests/jest", jest: jest %>
      <% end %>
    </div>
  </div>
</div>

